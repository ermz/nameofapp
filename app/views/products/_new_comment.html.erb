<% if signed_in? %>
  <h4>Add a review:</4>
  <%= form_for([@product, @product.comments.build]) do |f| %>
    <p class="form-group">
      <%= f.label :body, "Comments" %><br>
      <%= f.text_area :body, class: "form-label" %>
    </p>

    <p>
      <div class="rating"></div>
    </p>

    <p class="actions">
      <%= f.submit "Submit" %>
    </p>
  <% end %>
<% end %>
