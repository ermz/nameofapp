<h1>Contact Us!</h1>

<%= flash[:notice] %>

<div class="contact-div">
  <%= form_with(url:"/simple_pages/thank_you", method: "post", local: true) do |form| %>
    <div class="row">
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control", placeholder: "Enter Name", required: "required" %>
      </div>
      <div class="form-group">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "Enter Email", required: "required" %>
      </div>
      <div class="form-group">
        <%= form.label :message %>
        <%= form.text_area :message, class: "form-control", placeholder: "Enter Message", rows: 5, required: "required" %>
      </div>
    </div>

    <div class="actions form-label">
      <%= form.submit "Send"%>
    </div>
  <% end %>

  <div class="contact-info">
    <p>Mobile: (407)810-4369</p>
    <p>E-mail: eramirez4369@gmail.com</p>
  </div>
</div>
